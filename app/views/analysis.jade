doctype html
html
  include includes/head.jade
  script(src='/js/jquery.cookie.js')
  script(src='/js/analysis.js')
  title SSNoC - Analysis
  body
    include includes/navbar.jade
    div.container
      br
      br 
      div.text-center
        h3 Specify a time window
      br
      form.form-horizontal(action='/analysis', method='post', role='form')
        div.form-group
          label.col-sm-2.col-md-5.control-label within
          div.col-sm-2.col-md-2
            input.timeWindow(class="form-control" name='timeWindowInHours' id='timeWindowInHours' type='text' placeholder='how many')
          label.col-sm-0.col-md-0.control-label hours
        br
        div.text-center
          button(type="submit" class="btn btn-info btn-lg" id="analyzeBtn") Analyze

    div.container
      br
      br
      if ( typeof clusters !== 'undefined' && clusters !== null )
        table.table.table-striped.table-bordered
          thead
            tr
              th  User Clusters
          tbody
            each cluster in clusters
              if typeof cluster !== 'undefined'
                tr
                  td #{cluster.local.userNames.toString()}


