    button(class="btn btn-sucess navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
      span.icon-bar
      span.icon-bar
      span.icon-bar
    p.navbar-brand
  div.navbar-collapse.collapse
    if session.passport.user.privilege == "Citizen"
      form.navbar-form.navbar-left(action='/search', method='post', role="search")
        div.form-group
          input.user_name.form-control(id="user_name" type="hidden" class='form-control' name='user_name' value=user_name)
          input.author_name.form-control(id="author_name" type="hidden" class='form-control' name='author_name' value=author_name)
          input.target_name.form-control(id="target_name" type="hidden" class='form-control' name='target_name' value=target_name)
          input.search_string.form-control(type='search' id='search_string' name='search_string' placeholder='#{title}' value=search_string)
          input.context.form-control(type='hidden' class="form-control" name='context' id='context' placeholder="Search context" value='#{title}')
          button.btn.btn-default(type='submit')
            span.glyphicon.glyphicon-search
    else
      span.icon-bar
      span.icon-bar
      span.icon-bar
      p.navbar-brand #{title}
    ul.nav.nav-justified#nav_list
      li
        a(href="/wall")
          strong Wall
      li
        a(href="/people")
          strong People
      li
        a(href="/welcome")
          strong Help
      if session.passport.user.privilege == "Coordinator"
        li
          a(href="/analysis")
            strong Analyze
      if session.passport.user.privilege == "Monitor"
        li
          a(href="/monitor")
            strong Monitor
      if session.passport.user.privilege == "Administrator"
        li
          a(href="/analysis")
            strong Analyze
        li
          a(href="/monitor")
            strong Monitor
        li
          a(href="/admin")
            strong Admin
      li
