doctype html
html
  head
    <meta charset="utf-8">
    <!-- Set the viewport so this responsive site displays correctly on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    script(src='/js/jquery-1.9.1.min.js')
    script(src='/js/jquery.watermarkinput.js')
    link(rel='stylesheet', href='/css/opensans.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    script(src='/js/bootstrap.min.js')
    script(src='/js/login_signup.js')
    script(src='/js/join.js')
    title SSNoC - Login
  body
    div.container
      h3.text-center
        span.fa.fa-sign-in Survivable Social Network on a Chip
      h3.text-center
        span.fa.fa-sign-in User Login
      br
      if message.length > 0
        div.alert.alert-danger#passport_alert #{message}
      div.alert.alert-danger#alert
      br
      div.row.text-center.col-sm-6.col-sm-offset-3
        div.join
          form.form-login(action='/login', method='post')
            div.form-group
              input.name.form-control(id="userName" type="text" class='form-control' name='name' placeholder="Please enter your user name")
            div.form-group
              input.password.form-control(id="passwd" type="password" class='form-control' name='password' placeholder="Please enter your password")
            button(type="submit", class='btn btn-info btn-lg' id="signupBtn") Login
        br
        p Need an account?
          <a href='/signup'>Signup here</a>
