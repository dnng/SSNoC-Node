doctype html
html
  head
    <meta charset="utf-8">
    <!-- Set the viewport so this responsive site displays correctly on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    script(src='/js/jquery-1.9.1.min.js')
    script(src='/js/jquery.watermarkinput.js')
    link(rel='stylesheet', href='/css/opensans.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    script(src='/js/bootstrap.min.js')
    script(src='/js/login_signup.js')
    script(src='/js/signup.js')
    title SSNoC - User Signup
  body
    div.container
      h3.text-center
        span.fa.fa-sign-in New User Signup
      br
      if message.length > 0
        div.alert.alert-danger#passport_alert #{message}
      div.alert.alert-danger#alert
      br
      div.row.text-center.col-sm-6.col-sm-offset-3
        div.signup
          form(action='/signup', method='post')
            div.form-group
              input.name(type='text' class='form-control' name='name' id="userName" placeholder="Please enter a user name")
            div.form-group
              input.password(type="password" class="form-control" name="password" id="passwd" placeholder="Please enter a password")
            div.form-group
              input.password(type="password" class="form-control" name="re-password" id="passwdRe" placeholder="Please re-enter password to confirm")
            button(type="submit" class="btn btn-info btn-lg" id="signupBtn") Signup
        br
        p Go back to login page?
          <a href='/'>Click here</a>
